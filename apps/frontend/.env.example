# Frontend Environment Configuration Template
# Copy this file to .env.local and customize for your environment

# GraphQL API Configuration
NUXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:4000/graphql
NUXT_PUBLIC_GRAPHQL_WS_ENDPOINT=ws://localhost:4000/graphql

# Application Configuration
NODE_ENV=development
NUXT_PORT=3000
NUXT_HOST=localhost

# Debug Configuration
NUXT_DEBUG=false
NUXT_PUBLIC_DEBUG_GRAPHQL=true

# Production Configuration (uncomment and configure for deployment)
# NUXT_PUBLIC_GRAPHQL_ENDPOINT=https://your-production-api.com/graphql
# NUXT_PUBLIC_GRAPHQL_WS_ENDPOINT=wss://your-production-api.com/graphql
# NODE_ENV=production
# NUXT_PUBLIC_DEBUG_GRAPHQL=false